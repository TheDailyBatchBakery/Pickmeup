# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Email Notifications (Resend)
RESEND_API_KEY=your_resend_api_key
ENABLE_EMAIL_NOTIFICATIONS=true
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Your Business Name
REPLY_TO_EMAIL=support@yourdomain.com

# SMS Notifications (Twilio) - Optional
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number
ENABLE_SMS_NOTIFICATIONS=false

# Business Configuration
NEXT_PUBLIC_BUSINESS_NAME=Your Business Name
NEXT_PUBLIC_BUSINESS_EMAIL=orders@yourdomain.com
NEXT_PUBLIC_BUSINESS_PHONE=(555) 123-4567
NEXT_PUBLIC_BUSINESS_ADDRESS=123 Main St, City, State 12345

# Business Hours
NEXT_PUBLIC_BUSINESS_OPEN_HOUR=10
NEXT_PUBLIC_BUSINESS_CLOSE_HOUR=20
NEXT_PUBLIC_ORDER_CUTOFF_MINUTES=30
NEXT_PUBLIC_TIME_SLOT_INTERVAL=15

# Features
REQUIRE_ZIP_CODE=true

